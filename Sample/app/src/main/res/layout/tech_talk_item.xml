<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
>
    <data>
        <variable name="techTalk" type="entreco.nl.sample.techtalk.data.TechTalkModel"/>
        <variable name="viewModel" type="entreco.nl.sample.techtalk.TechTalkViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="@{() -> viewModel.onTechTalkClicked(techTalk)}"
        android:padding="16dp">

        <ImageView android:layout_width="80dp" android:layout_height="80dp"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginStart="80dp"
                      android:padding="8dp"
                      android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@{techTalk.data.topic()}"
                tools:text="Hello"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/by(techTalk.data.speaker().name())}"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Hello"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textStyle="italic"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{@string/location(techTalk.data.room().description())}"
                tools:text="Hello\nanother line maybe?\nMore \n Even more??\nasdfasdf"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</layout>